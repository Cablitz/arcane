{
    "rules": [
        {
            "rule": "convert_require",
            "current": {
                "name": "path",
                "sources": {
                    "@client": "src/client",
                    "@controllers": "src/client/controllers",
                    "@server": "src/server",
                    "@services": "src/server/services",
                    "@common": "src/common",
                    "@blink": ".blink",
                    "@packages": "./packages",
                    "@server-packages": "./server-packages"
                }
            },
            "target": {
                "name": "roblox",
                "rojo_sourcemap": "sourcemap.json",
                "indexing_style": "wait_for_child"
            }
        }
    ]
}